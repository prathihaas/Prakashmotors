---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Fetch Data
const allProducts = await getCollection('products');
const recentPosts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);
---

<Layout title="Home - New Holland Dealer">
    
    <!-- Fixed WhatsApp -->
    <a href="https://wa.me/919999999999" target="_blank" class="fixed bottom-6 right-6 z-50 flex items-center gap-3 bg-[#25D366] text-white px-5 py-3 rounded-full shadow-lg hover:bg-green-600 transition-all duration-300 hover:scale-105 animate-float group ring-4 ring-white border border-green-500/10">
        <div class="relative">
            <span class="absolute -top-1 -right-1 flex h-3 w-3"><span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span><span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span></span>
            <i data-lucide="message-circle" class="w-7 h-7 fill-current"></i>
        </div>
        <div class="flex flex-col text-left">
            <span class="text-[10px] font-bold opacity-90 uppercase tracking-wider">Chat with us</span>
            <span class="text-sm font-extrabold leading-tight">Get Price List<br><span class="font-telugu font-medium text-xs">ధరల పట్టిక పొందండి</span></span>
        </div>
    </a>

    <!-- Navbar -->
    <nav class="fixed w-full z-40 bg-white/95 backdrop-blur-md border-b border-[#001489]/5 transition-all duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <div class="flex items-center gap-3">
                    <div class="w-11 h-11 bg-[#001489] flex items-center justify-center text-white font-black text-2xl shadow-sm"><span class="text-[#FFD100] scale-125">P</span></div>
                    <div class="flex flex-col">
                        <a href="/" class="text-xl font-black text-[#001489] tracking-tighter uppercase leading-none hover:text-[#000E5C]">Prakash<br>Motors</a>
                        <span class="text-[10px] text-gray-500 font-bold tracking-[0.2em] uppercase mt-1 border-t border-gray-200 pt-0.5">NIZAMABAD</span>
                    </div>
                </div>
                <div class="flex items-center gap-6">
                    <div class="hidden md:flex gap-6 font-bold text-sm text-[#001489] tracking-wide">
                        <a href="/#products" class="hover:text-[#000E5C] transition">PRODUCTS</a>
                        <a href="/#blog" class="hover:text-[#000E5C] transition">BLOG</a>
                        <a href="/#contact" class="hover:text-[#000E5C] transition">CONTACT</a>
                    </div>
                    <a href="tel:+919999999999" class="flex items-center gap-3 bg-white text-[#001489] border-2 border-[#001489] px-6 py-2 rounded-full font-bold hover:bg-[#001489] hover:text-white transition-colors duration-300 shadow-sm active:scale-95 group">
                        <i data-lucide="phone" class="w-5 h-5 group-hover:fill-current"></i>
                        <div class="flex flex-col text-left leading-none">
                            <span class="text-xs font-extrabold uppercase tracking-wide">Call Now</span>
                            <span class="font-telugu text-xs font-semibold">కాల్ చేయండి</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden bg-white">
        <div class="absolute inset-0 z-0">
             <div class="absolute top-0 right-0 w-2/3 h-full bg-[#001489] opacity-[0.03]" style="clip-path: polygon(0 0, 100% 0, 100% 100%, 50% 100%, 0 0);"></div>
             <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#001489]/5 rounded-full blur-3xl -translate-x-1/2 translate-y-1/2"></div>
        </div>
        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
                <div class="space-y-8 text-center lg:text-left">
                    <div class="inline-flex items-center gap-3 px-4 py-2 bg-[#001489]/5 text-[#001489] border border-[#001489]/10 mx-auto lg:mx-0 rounded-none">
                        <span class="w-1.5 h-1.5 rounded-full bg-[#001489] animate-pulse"></span>
                        <span class="text-xs font-bold tracking-widest uppercase">Authorized New Holland Dealer</span>
                    </div>
                    <div>
                        <h1 class="text-5xl lg:text-7xl font-black text-[#001489] leading-tight tracking-tight mb-4">LEAD THE <br>FIELD</h1>
                        <h2 class="text-2xl lg:text-3xl font-bold text-gray-600 font-telugu mb-2">వ్యవసాయంలో మీ విజయ ప్రస్థానం</h2>
                    </div>
                    <div class="text-gray-600 max-w-xl mx-auto lg:mx-0 font-medium space-y-2 border-l-4 border-[#001489] pl-4">
                        <p class="text-lg">Premium Tractors & Harvesters in Nizamabad.</p>
                        <p class="text-lg font-telugu">నిజామాబాద్‌లో అత్యుత్తమ ట్రాక్టర్లు మరియు హార్వెస్టర్ల కోసం.</p>
                    </div>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-6">
                        <a href="#products" class="bg-[#001489] text-white px-8 py-4 font-bold text-lg hover:bg-[#000E5C] transition-all shadow-lg flex items-center justify-center gap-4 rounded-sm">
                            <div class="text-left leading-tight"><span class="block tracking-wide">VIEW PRODUCTS</span><span class="block font-telugu text-sm font-normal text-gray-200">యంత్రాలను చూడండి</span></div>
                            <i data-lucide="arrow-right" class="w-5 h-5"></i>
                        </a>
                    </div>
                </div>
                <div class="relative hidden lg:block">
                    <div class="relative w-full aspect-[4/3]">
                         <div class="group relative w-full h-full overflow-hidden rounded-sm shadow-2xl">
                             <img src="https://images.unsplash.com/photo-1592862085739-1616c3986a43?auto=format&fit=crop&q=80&w=1000" class="object-cover w-full h-full transform group-hover:scale-105 transition duration-1000" alt="New Holland Tractor">
                             <div class="absolute inset-0 bg-[#001489]/10 mix-blend-multiply"></div>
                         </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Products Section (Dynamic) -->
    <section id="products" class="py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="mb-16">
                <div class="flex items-center gap-4 mb-2"><div class="h-px bg-[#001489] w-12"></div><span class="text-[#001489] font-bold tracking-[0.2em] uppercase text-xs">Our Showroom</span></div>
                <h2 class="text-4xl md:text-5xl font-black text-[#001489] uppercase mb-2">Modern Machinery</h2>
                <p class="font-telugu text-xl text-gray-500 font-medium">మా వద్ద లభించు ఆధునిక యంత్రాలు</p>
            </div>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {allProducts.map(product => (
                    <div class={`product-card group bg-white border border-gray-200 hover:border-[#001489]/50 shadow-sm hover:shadow-lg relative flex flex-col h-full rounded-none ${product.data.isRecommended ? 'border-2 border-[#001489]' : ''}`}>
                        <div class="h-64 overflow-hidden bg-gray-100 relative shrink-0">
                            {product.data.isRecommended && <div class="absolute top-0 right-0 bg-[#001489] text-white text-[10px] font-bold px-3 py-1.5 uppercase tracking-wider z-10">Recommended</div>}
                            <img src={product.data.image} alt={product.data.title} class="w-full h-full object-cover group-hover:scale-110 transition duration-700" />
                        </div>
                        <div class="p-8 flex-1 flex flex-col">
                            <h3 class="text-2xl font-black text-[#001489] uppercase mb-1">{product.data.title}</h3>
                            <p class="font-telugu text-lg font-bold text-gray-700 mb-4">{product.data.title_te}</p>
                            <div class="space-y-4 mb-8 flex-1">
                                <ul class="text-gray-600 text-sm leading-relaxed border-l-2 border-[#001489] pl-3 list-none">
                                    {product.data.features.map(feature => (
                                        <li class="mb-1">{feature}</li>
                                    ))}
                                </ul>
                            </div>
                            <div class="flex flex-col gap-2">
                                <button onclick={`window.open('${product.data.whatsapp_message || 'https://wa.me/919999999999'}', '_blank')`} class="w-full bg-[#001489] text-white py-4 font-bold hover:bg-[#000E5C] transition-colors flex items-center justify-center gap-3 uppercase tracking-wide text-sm rounded-sm">
                                    <div class="text-left leading-none"><span class="block">Get Quote</span><span class="block font-telugu text-[10px] font-normal mt-0.5 opacity-80">ధర అడగండి</span></div>
                                    <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                </button>
                                <a href={`/products/${product.slug}`} class="text-center text-[#001489] font-bold text-xs uppercase tracking-widest hover:underline py-2">View Details</a>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Blog Section (Dynamic) -->
    <section id="blog" class="py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
             <div class="mb-12">
                <div class="flex items-center gap-4 mb-2"><div class="h-px bg-[#001489] w-12"></div><span class="text-[#001489] font-bold tracking-[0.2em] uppercase text-xs">Farming Insights</span></div>
                <h2 class="text-4xl md:text-5xl font-black text-[#001489] uppercase mb-2">News & Tips</h2>
                <p class="font-telugu text-xl text-gray-500 font-medium">వ్యవసాయ విశేషాలు మరియు చిట్కాలు</p>
            </div>
            
            <div class="grid md:grid-cols-3 gap-8">
                {recentPosts.map(post => (
                    <article class="bg-white group blog-card border border-gray-100 shadow-sm hover:shadow-lg transition-all cursor-pointer">
                        <a href={`/blog/${post.slug}`} class="block h-full">
                            <div class="h-48 overflow-hidden relative">
                                <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover transition transform duration-500 group-hover:scale-105" />
                                <div class="absolute bottom-0 left-0 bg-[#001489] text-white text-[10px] font-bold px-3 py-1 uppercase">{post.data.category}</div>
                            </div>
                            <div class="p-6">
                                <span class="text-xs text-gray-400 font-bold mb-2 block">{post.data.pubDate.toLocaleDateString()}</span>
                                <h3 class="text-lg font-bold text-[#001489] mb-1 leading-tight">{post.data.title}</h3>
                                <h4 class="font-telugu text-base font-semibold text-gray-700 mb-3">{post.data.title_te}</h4>
                                <p class="text-sm text-gray-500 line-clamp-2 mb-4">{post.data.description}</p>
                                <span class="text-[#001489] text-xs font-black uppercase tracking-wider flex items-center gap-1">Read More <i data-lucide="arrow-right" class="w-3 h-3"></i></span>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-white text-[#001489] relative border-t border-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-4xl font-black mb-2 uppercase">Visit Prakash Motors</h2>
            <p class="font-telugu text-xl font-bold mb-4 text-gray-600">ప్రకాష్ మోటార్స్ సందర్శించండి</p>
            <p class="text-lg text-gray-500 mb-12">Opposite New Bus Stand, Nizamabad, Telangana</p>
            
             <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
                <a href="tel:+919999999999" class="group bg-white p-8 border border-gray-200 hover:border-[#001489] shadow-sm hover:shadow-lg transition-all duration-300">
                    <div class="w-12 h-12 mx-auto bg-[#001489]/5 text-[#001489] rounded-full flex items-center justify-center mb-4 group-hover:bg-[#001489] group-hover:text-white transition-colors"><i data-lucide="phone-call" class="w-6 h-6"></i></div>
                    <p class="font-bold text-lg text-[#001489]">+91 99999 99999</p>
                </a>
                <a href="https://maps.google.com" target="_blank" class="group bg-white p-8 border border-gray-200 hover:border-[#001489] shadow-sm hover:shadow-lg transition-all duration-300">
                    <div class="w-12 h-12 mx-auto bg-[#001489]/5 text-[#001489] rounded-full flex items-center justify-center mb-4 group-hover:bg-[#001489] group-hover:text-white transition-colors"><i data-lucide="map" class="w-6 h-6"></i></div>
                    <p class="font-bold text-lg text-[#001489]">Google Maps</p>
                </a>
                <a href="https://wa.me/919999999999" target="_blank" class="group bg-[#001489] p-8 border border-[#001489] shadow-lg hover:bg-[#000E5C] transition-all duration-300 transform hover:-translate-y-1">
                    <div class="w-12 h-12 mx-auto bg-white/10 text-white rounded-full flex items-center justify-center mb-4"><i data-lucide="message-square" class="w-6 h-6"></i></div>
                    <p class="font-bold text-lg text-white">WhatsApp</p>
                </a>
            </div>
        </div>
    </section>

    <footer class="bg-[#001489] text-white py-12 border-t border-white/10 mt-auto">
        <div class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-6">
             <div class="text-center md:text-left">
                <span class="text-2xl font-black uppercase tracking-tighter">Prakash Motors</span>
                <p class="text-sm text-blue-200 mt-2">Authorized New Holland Dealer, Nizamabad.</p>
            </div>
            <div class="text-center text-xs text-blue-400">© 2024 Prakash Motors. All rights reserved.</div>
        </div>
    </footer>
    <script>lucide.createIcons();</script>
</Layout>