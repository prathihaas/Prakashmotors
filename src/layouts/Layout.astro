---
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { 
    title, 
    description = "Authorized New Holland dealer in Nizamabad. Best prices for Tractors (3630, 3600-2), Sugarcane Harvesters, and Silver Track Paddy Harvesters.",
    image = "https://images.unsplash.com/photo-1592862085739-1616c3986a43?auto=format&fit=crop&q=80&w=1200"
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        
        <!-- SEO Tags -->
        <title>{title} | Prakash Motors</title>
        <meta name="description" content={description} />
        
        <!-- Open Graph -->
        <meta property="og:type" content="business.business">
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={image} />
        <meta property="twitter:card" content="summary_large_image" />
        
        <!-- Fonts: Montserrat & Noto Sans Telugu -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&family=Noto+Sans+Telugu:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        
        <!-- Icons -->
        <script src="https://unpkg.com/lucide@latest"></script>

        <!-- Schema.org JSON-LD -->
        <script type="application/ld+json" is:inline>
        {
          "@context": "https://schema.org",
          "@type": "AutoDealer",
          "name": "Prakash Motors",
          "image": ["https://images.unsplash.com/photo-1592862085739-1616c3986a43"],
          "@id": "https://prakashmotors.com",
          "url": "https://prakashmotors.com",
          "telephone": "+919999999999",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Opposite New Bus Stand",
            "addressLocality": "Nizamabad",
            "addressRegion": "Telangana",
            "postalCode": "503001",
            "addressCountry": "IN"
          },
          "brand": { "@type": "Brand", "name": "New Holland" }
        }
        </script>
	</head>
	<body class="bg-white text-gray-800 antialiased selection:bg-[#001489] selection:text-white flex flex-col min-h-screen">
		<slot />
        <script is:inline>
            if (typeof lucide !== 'undefined') { lucide.createIcons(); }
        </script>
	</body>
</html>

<style is:global>
    :root {
        --nh-blue: #001489;
        --nh-blue-dark: #000E5C;
        --nh-yellow: #FFD100;
    }
    html {
        font-family: 'Montserrat', sans-serif;
        scroll-behavior: smooth;
    }
    .font-telugu {
        font-family: 'Noto Sans Telugu', sans-serif;
        line-height: 1.5;
    }
    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
    .product-card { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
    .product-card:hover { transform: translateY(-8px); }
</style>